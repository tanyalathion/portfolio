<!-- Contact form-->
<div class="bg-light rounded-4 py-5 px-4 px-md-5">
  <div class="text-center mb-5">
    <div class="feature bg-primary bg-secondary text-white rounded-3 mb-3"><i class="ri-shake-hands-line"></i></div>
      <h1 class="fw-bolder">Get in touch</h1>
      <p class="lead fw-normal text-muted mb-0">Let's work together!</p>
    </div>

    <div class="row gx-5 justify-content-center">
      <div class="col-lg-8 col-xl-6">
      <!-- * * * * * * * * * * * * * * *-->
      <%= form_with(model: @contact, url: contacts_path, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group mb-4">
      <%= form.label :message %>
      <%= form.text_area :message, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.submit 'Envoyer', class: 'btn btn-primary' %>
    </div>
  <% end %>
      <!-- * * * * * * * * * * * * * * *-->

    </div>
  </div>
</div>
